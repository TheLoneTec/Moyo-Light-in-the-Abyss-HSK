<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<RecipeDef>
		<defName>Make_RedMoyo_Abyssteel</defName>
		<label>make abyssteel</label>
		<description>Make abyssteel, a commonly used alloy in the lighthouse. It is necessary for producing their items.</description>
		<jobString>Making abyssteel.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>10000</workAmount>
		<recipeUsers>
			<li>Moyo_FabricationBench</li>
		</recipeUsers>			
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AbyssSerum</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>			
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Plasteel</li>
				<li>Uranium</li>
				<li>Steel</li>
				<li>AbyssSerum</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Moyo_Abyssteel>75</Moyo_Abyssteel>
		</products>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>RedMoyoProduction</researchPrerequisite>
	</RecipeDef>

