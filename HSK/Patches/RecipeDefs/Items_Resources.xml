<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		
		<operations>
			<li Class="PatchOperationFindMod">
			<mods><li>Moyo-Light in the Abyss HSK</li></mods>
			<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="Make_RedMoyo_Abyssteel"]/ingredients</xpath>
				<value>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Plasteel</li>
								</thingDefs>
							</filter>
							<count>35</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>DepletedUranium</li>
								</thingDefs>
							</filter>
							<count>40</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>Tungsten</li>
								</thingDefs>
							</filter>
							<count>10</count>
						</li>
						<li>
							<filter>
								<thingDefs>
									<li>AbyssSerum</li>
								</thingDefs>
							</filter>
							<count>5</count>
						</li>
					</ingredients>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="Make_RedMoyo_Abyssteel"]/fixedIngredientFilter</xpath>
				<value>
					<fixedIngredientFilter>
						<thingDefs>
							<li>Plasteel</li>
							<li>DepletedUranium</li>
							<li>Tungsten</li>
							<li>AbyssSerum</li>
						</thingDefs>
					</fixedIngredientFilter>
				</value>
			</li>

			</operations>
			</match>
			</li>
		</operations>
	</Operation>
</Patch>